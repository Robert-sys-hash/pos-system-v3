@products_bp.route('/products/bulk-update-manufacturer', methods=['POST'])
def bulk_update_manufacturer():
    """Masowa aktualizacja producenta dla wielu produkt√≥w"""
    try:
        data = request.json
        product_ids = data.get('product_ids', [])
        manufacturer_id = data.get('manufacturer_id')
        
        if not product_ids:
            return error_response("Lista produkt√≥w jest wymagana", 400)
        
        # Sprawd≈∫ czy producent istnieje (je≈õli nie jest NULL)
        if manufacturer_id is not None:
            manufacturer_check = execute_query("SELECT id FROM producenci WHERE id = ?", [manufacturer_id])
            if not manufacturer_check:
                return error_response("Producent nie zosta≈Ç znaleziony", 400)
        
        # Przygotuj zapytanie SQL dla masowej aktualizacji
        placeholders = ','.join(['?' for _ in product_ids])
        sql_update = f"UPDATE produkty SET producent_id = ? WHERE id IN ({placeholders})"
        params = [manufacturer_id] + product_ids
        
        success = execute_insert(sql_update, params)
        
        if success:
            return success_response({
                'updated_products': len(product_ids),
                'manufacturer_id': manufacturer_id
            }, f"Zaktualizowano producenta dla {len(product_ids)} produkt√≥w")
        else:
            return error_response("B≈ÇƒÖd podczas masowej aktualizacji producenta", 500)
            
    except Exception as e:
        print(f"B≈ÇƒÖd masowej aktualizacji producenta: {e}")
        return error_response("WystƒÖpi≈Ç b≈ÇƒÖd podczas masowej aktualizacji producenta", 500)
